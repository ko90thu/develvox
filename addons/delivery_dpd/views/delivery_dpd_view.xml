<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <data>

        <record id="view_delivery_carrier_form_with_provider_dpd" model="ir.ui.view">
            <field name="name">delivery.carrier.form.provider.dpd</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
            	<field name="integration_level" position="before">
		    		<field name="dpd_shipping_cost" attrs="{'invisible': [('delivery_type', '!=', 'dpd')]}"/>
		    	</field>
                <xpath expr="//button[@name='install_more_provider']" position="replace"></xpath>
                <field name="integration_level" position="after">
                    <button string="Install more Providers" name="install_more_provider" type="object" class="oe_link oe_edit_only"/>
                </field>
                                
                <xpath expr="//notebook/page[@name='destination']" position='before'>
        			<page string="DPD Configuration" attrs="{'invisible': [('delivery_type', '!=', 'dpd')]}">
	                    <group string='DPD Configuration' attrs="{'invisible': [('delivery_type', '!=', 'dpd')]}">
	                        <group>
	                            <field name="dpd_partner_name" attrs="{'required': [('delivery_type', '=', 'dpd'),('prod_environment', '!=', True)],'invisible':[('prod_environment', '=', True)]}"/>
	                            <field name="dpd_partner_token" attrs="{'required': [('delivery_type', '=', 'dpd'),('prod_environment', '!=', True)],'invisible':[('prod_environment', '=', True)]}"/>
	                            <field name="dpd_user_id" attrs="{'required': [('delivery_type', '=', 'dpd'),('prod_environment', '!=', True)],'invisible':[('prod_environment', '=', True)]}"/>
	                            <field name="dpd_user_token" attrs="{'required': [('delivery_type', '=', 'dpd'),('prod_environment', '!=', True)],'invisible':[('prod_environment', '=', True)]}"/>
	                            <field name="dpd_live_partner_name" placeholder="Production Partner Name" attrs="{'required': [('delivery_type', '=', 'dpd'),('prod_environment', '=', True)],'invisible':[('prod_environment', '!=', True)]}"/>
	                            <field name="dpd_live_partner_token" placeholder="Production Partner Token" attrs="{'required': [('delivery_type', '=', 'dpd'),('prod_environment', '=', True)],'invisible':[('prod_environment', '!=', True)]}"/>
	                            <field name="dpd_live_user_id" placeholder="Production Cloud User ID" attrs="{'required': [('delivery_type', '=', 'dpd'),('prod_environment', '=', True)],'invisible':[('prod_environment', '!=', True)]}"/>
	                            <field name="dpd_live_user_token" placeholder="Production User Token" attrs="{'required': [('delivery_type', '=', 'dpd'),('prod_environment', '=', True)],'invisible':[('prod_environment', '!=', True)]}"/>
	                            
	                        </group>
	                        <group>
	                            <field name="dpd_label_size" attrs="{'required': [('delivery_type', '=', 'dpd')]}"/>
	                            <field name="dpd_label_start_position" attrs="{'required': [('delivery_type', '=', 'dpd')]}"/>
	                            <field name="dpd_ship_service" attrs="{'required': [('delivery_type', '=', 'dpd')]}"/>
	                        </group>
	                    </group>
	            	</page>
                </xpath>
            </field>
        </record>

    	<record id="view_picking_withcarrier_out_form_inherit" model="ir.ui.view">
            <field name="name">delivery.stock.picking_withcarrier.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
            <field name="arch" type="xml">
            	<field name="carrier_id" position="after">
            	    <field name="dpd_label_name" invisible="1"/>
            		<field name="dpd_label_bin" readonly="1" filename="dpd_label_name" attrs="{'invisible':[('dpd_label_bin','=',False)]}"/>
            	</field>
            </field>
        </record>
            

</data></odoo>
