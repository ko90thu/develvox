<odoo>

    <record id="view_order_form_fix_problems" model="ir.ui.view">
        <field name="name">sale.order.form.fix.problems</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button string="Fix Problem" type="object" name="fix_problem"/>
            </xpath>
        </field>
    </record>

</odoo>